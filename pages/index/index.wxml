 <view class="map_container">
  <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" show-location="true" markers="{{markers}}"  bindmarkertap="makertap" bindcontroltap="controltap" bindregionchange='changeView' controls="{{controls}}">

    <cover-view>
      <cover-view class='topWarn'>
        <cover-view class='warnMsg'>12岁以下儿童禁止使用ofo小黄车</cover-view>
      </cover-view>
    </cover-view>
    <cover-view>
      <cover-view class='footer_box' catchtap='jumpScan'>
        <cover-image class='image' src='../../img/qr_code.png' />
        <cover-view class='footer_text'>立即用车</cover-view>
      </cover-view>
    </cover-view>

  </map>
</view> 
